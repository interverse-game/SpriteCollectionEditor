<Window x:Class="TML.SpriteCollectionEditor.ConfigDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TML.SpriteCollectionEditor"
        mc:Ignorable="d"
        Title="Configurations" Height="136" Width="500"
        WindowStartupLocation="CenterOwner"
        DataContext="{Binding RelativeSource={RelativeSource Self}}" ResizeMode="NoResize" SizeToContent="Height" ShowInTaskbar="False">
    <DockPanel Margin="10">
        <WrapPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Confirm" MinWidth="90" Height="26" 
                    CommandParameter="{Binding}"
                    Command="{Binding ConfirmCommand}"/>
            <Button Content="Cancel" MinWidth="90" Margin="10,0,0,0" 
                    CommandParameter="{Binding}"
                    Command="{Binding CancelCommand}"/>
        </WrapPanel>
        <Grid VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Resource path:"/>
            <DockPanel Grid.Row="0" Grid.Column="1">
                <Button DockPanel.Dock="Right" Content="Browse..." Margin="5,0,0,0" Padding="12,1,12,1"
                        CommandParameter="{Binding}"
                        Command="{Binding BrowseCommand}"/>
                <TextBox Text="{Binding Config.ResourcePath, Mode=TwoWay}" VerticalContentAlignment="Center"/>
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>
